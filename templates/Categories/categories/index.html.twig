

{% extends 'base.html.twig' %}
{% block content %}

    <section class="content-header">
        {{ show_source_code(_self) }}<br>
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> {{ "Category management"|trans }}</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">{{ "Category management"|trans }}</a></li>
                        <li class="breadcrumb-item active">{{ "List"|trans }}</li>
                    </ol>

                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="card">

                <div class="card-header">
                    {{ form_start(form) }}
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="card-body">
                    <a  href="{{ path('admin_category_create') }}" class="btn btn-info"> {{ "Add category"|trans }}</a>
                    <table id="category_table" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th class="id">{{ "ID"|trans }} </th>
                            <th >{{ "Name"|trans }} </th>
                            <th >{{ "Photo"|trans }} </th>
                            <th > {{ "Created At"|trans }} </th>
                            <th > {{ "updated At"|trans }} </th>
                            <th > {{ "Options"|trans }} </th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </section>

    {{ encore_entry_script_tags('category') }}
{% endblock %}


